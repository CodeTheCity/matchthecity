<p id="notice"><%= notice %></p>

<p>
  <strong>Activity Category:</strong>
  <%= @sub_activity.activity.try :title %>
</p>

<p>
  <strong>Title:</strong>
  <%= @sub_activity.title %>
</p>


<h2>Where to do it</h2>
<table class='table-striped table sortable'>
  <thead>
    <tr>
      <th>Activity</th>
      <th>Sub Activity</th>
      <th>Venue</th>
      <th>Day</th>
      <th>Time</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_activity.opportunities.each do |opportunity| %>
      <tr>
        <td><%= opportunity.activity.try :title %></td>
        <td><%= opportunity.sub_activity.try :title %></td>
        <td><%= opportunity.venue.try :name %></td>
        <td><%= opportunity.day_of_week %></td>
        <td nowrap><%= opportunity.start_time %> - <%= opportunity.end_time %></td>
        <td><%= opportunity.description %></td>
        <td><%= link_to 'Show', opportunity %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', sub_activities_path %>
