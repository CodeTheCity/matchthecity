<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @activity.title %>
</p>

<p>
  <strong>Category:</strong>
  <%= @activity.category %>
</p>

<p>
  <strong>Sub Activities</strong>
  <ul>
    <% @activity.sub_activities.order(:title).each do |sub_activity| %>
      <li><%= sub_activity.title %> (<%= sub_activity.opportunities.count %>) [<%= link_to 'view all events', opportunities_path(:sub_activity => sub_activity) %>] </li>
    <% end %>
  </ul>

<%= link_to 'Edit', edit_activity_path(@activity) %> |
<%= link_to 'Back', activities_path %>
